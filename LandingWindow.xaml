<Window x:Class="HospitalSchedulerUI.LandingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hospital Scheduler" Height="450" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FFFAFAFA">
        <Border CornerRadius="10" Background="White" Padding="20" Width="600" Height="300" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >
                <TextBlock x:Name="HospitalNameText" Text="Medi-Match" FontSize="36" FontWeight="Bold" TextAlignment="Center" Margin="0,10" />
                <TextBlock Text="Keeping Healthcare in Perfect Sync" FontSize="14" TextAlignment="Center" Margin="0,5,0,20" Foreground="Gray" />
                <Button Name="BtnSchedule" Content="Schedule Appointments" Width="220" Height="45" Background="#FF007ACC" Foreground="White" FontWeight="SemiBold" Click="BtnSchedule_Click" />
            </StackPanel>
        </Border>
    </Grid>
</Window>