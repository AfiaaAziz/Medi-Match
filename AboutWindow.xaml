<Window x:Class="HospitalSchedulerUI.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About Us" Height="600" Width="900" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryDark" Color="#2F3E3C"/>
        <SolidColorBrush x:Key="PanelBg" Color="#FBF9F1"/>
    </Window.Resources>

    <Grid Background="{StaticResource PanelBg}">
        <Border Margin="40" Background="White" CornerRadius="8" Padding="30" VerticalAlignment="Center">
            <ScrollViewer>
                <StackPanel>
                    <TextBlock Text="About Medi-Match" FontSize="26" FontWeight="Bold" Foreground="{StaticResource PrimaryDark}" Margin="0,0,0,10"/>
                    <TextBlock Text="Our Mission" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryDark}" Margin="0,10,0,6"/>
                    <TextBlock Text="We have build an intelligent scheduling tool to help hospitals allocate doctors, beds and resources efficiently. This application uses a combination of fuzzy logic and rule-based specialty matching to prioritize urgent patients and ensure appropriate specialty referrals." TextWrapping="Wrap" Foreground="Black"/>

                    <TextBlock Text="How it works" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryDark}" Margin="0,10,0,6"/>
                    <TextBlock Text="Enter the number of doctors, patients and beds. Provide urgency levels and optional doctor/patient details. The backend algorithm creates an optimized assignment and produces a convergence graph and metrics." TextWrapping="Wrap" Foreground="Black"/>

                    <TextBlock Text="Team" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryDark}" Margin="0,10,0,6"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Text="- Member 1: Zumer Dhillun" FontSize="14" Foreground="Black"/>
                        <TextBlock Text="- Member 2: Afia Aziz" FontSize="14" Foreground="Black"/>
                        <TextBlock Text="- Member 3: Zoya Azad" FontSize="14" Foreground="Black"/>
                    </StackPanel>

                    <TextBlock Text="Contact" FontSize="18" FontWeight="SemiBold" Foreground="{StaticResource PrimaryDark}" Margin="0,10,0,6"/>
                    <TextBlock Text="For inquiries, contact us at medimatch@gmail.com" TextWrapping="Wrap" Foreground="Black"/>

                    <Button Content="Close" Width="120" Height="36" HorizontalAlignment="Right" Margin="0,20,0,0" Click="Close_Click"/>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>